    "headers" : {
      "type": "array",
      "description" : "List of HTTP headers to send",
      "$ref": "#/definitions/keyedColumns"
    }
  },
  "required": [ "base_uri" ],
  "definitions" :
    "keyedColumns": {
      "type": "array",
      "format": "table",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "title": "Key",
            "type": "string",
            "required": true
          },
          "value": {
            "title" : "Value",
            "type": "string",
            "required": true
          }
        }
      }
    }
  }
}
